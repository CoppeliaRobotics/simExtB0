<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<?xml-stylesheet type="text/xsl" href="callbacks.xsl"?>

<plugin name="BlueZero" short-name="B0" author="federico.ferri.it@gmail.com">
    <description>BlueZero plugin for V-REP.</description>
    <command name="create">
        <description>Create a new node.</description>
        <categories>
            <category name="node" />
        </categories>
        <params>
            <param name="name" type="string">
                <description>name of the node (will be changed if not unique during initialization)</description>
            </param>
        </params>
        <return>
            <param name="handle" type="string" default="">
                <description>a handle to the new node</description>
            </param>
        </return>
    </command>
    <command name="setAnnounceTimeout">
        <description>Set the announceNode timeout.</description>
        <categories>
            <category name="node" />
        </categories>
        <params>
            <param name="handle" type="string">
                <description>node handle</description>
            </param>
            <param name="timeout" type="int">
                <description>timeout in milliseconds, or -1 for no timeout</description>
            </param>
        </params>
        <return>
        </return>
    </command>
    <command name="init">
        <description>Initialize a node.</description>
        <categories>
            <category name="node" />
        </categories>
        <params>
            <param name="handle" type="string">
                <description>node handle</description>
            </param>
        </params>
        <return>
            <param name="name" type="string">
                <description>final name of the node as assigned from resolver node</description>
            </param>
        </return>
    </command>
    <command name="spinOnce">
        <description>Spin a node.</description>
        <categories>
            <category name="node" />
        </categories>
        <params>
            <param name="handle" type="string">
                <description>node handle</description>
            </param>
        </params>
        <return>
        </return>
    </command>
    <command name="cleanup">
        <description>Cleanup a node.</description>
        <categories>
            <category name="node" />
        </categories>
        <params>
            <param name="handle" type="string">
                <description>node handle</description>
            </param>
        </params>
        <return>
        </return>
    </command>
    <command name="destroy">
        <description>Destroy a node.</description>
        <categories>
            <category name="node" />
        </categories>
        <params>
            <param name="handle" type="string">
                <description>node handle</description>
            </param>
        </params>
        <return>
        </return>
    </command>
    <command name="createPublisher">
        <description>Create a new publisher.</description>
        <categories>
            <category name="topic" />
        </categories>
        <params>
            <param name="nodeHandle" type="string">
                <description>node handle</description>
            </param>
            <param name="topic" type="string">
                <description>topic name</description>
            </param>
            <param name="managed" type="bool" default="true">
                <description>managed flag</description>
            </param>
            <param name="notify_graph" type="bool" default="true">
                <description>notify_graph flag</description>
            </param>
        </params>
        <return>
            <param name="handle" type="string" default="-1">
                <description>a handle to the new publisher</description>
            </param>
        </return>
    </command>
    <command name="initPublisher">
        <description>Initialize a publisher (only needed for unmanaged publishers).</description>
        <categories>
            <category name="topic" />
        </categories>
        <params>
            <param name="handle" type="string">
                <description>publisher handle</description>
            </param>
        </params>
        <return>
        </return>
    </command>
    <command name="publish">
        <description>Publish some data.</description>
        <categories>
            <category name="topic" />
        </categories>
        <params>
            <param name="handle" type="string">
                <description>publisher handle</description>
            </param>
            <param name="payload" type="string">
                <description>message payload</description>
            </param>
        </params>
        <return>
        </return>
    </command>
    <command name="cleanupPublisher">
        <description>Cleanup a publisher (only needed for unmanaged publishers).</description>
        <categories>
            <category name="topic" />
        </categories>
        <params>
            <param name="handle" type="string">
                <description>publisher handle</description>
            </param>
        </params>
        <return>
        </return>
    </command>
    <command name="destroyPublisher">
        <description>Destroy a publisher.</description>
        <categories>
            <category name="topic" />
        </categories>
        <params>
            <param name="handle" type="string">
                <description>publisher handle</description>
            </param>
        </params>
        <return>
        </return>
    </command>
    <command name="createSubscriber">
        <description>Create a new subscriber.</description>
        <categories>
            <category name="topic" />
        </categories>
        <params>
            <param name="nodeHandle" type="string">
                <description>node handle</description>
            </param>
            <param name="topic" type="string">
                <description>topic name</description>
            </param>
            <param name="callback" type="string" default="">
                <description>lua calback to call when a message is received</description>
            </param>
            <param name="managed" type="bool" default="true">
                <description>managed flag</description>
            </param>
            <param name="notify_graph" type="bool" default="true">
                <description>notify_graph flag</description>
            </param>
        </params>
        <return>
            <param name="handle" type="string" default="">
                <description>a handle to the new subscriber</description>
            </param>
        </return>
    </command>
    <command name="initSubscriber">
        <description>Initialize a subscriber (only needed for unmanaged subscribers).</description>
        <categories>
            <category name="topic" />
        </categories>
        <params>
            <param name="handle" type="string">
                <description>subscriber handle</description>
            </param>
        </params>
        <return>
        </return>
    </command>
    <command name="cleanupSubscriber">
        <description>Cleanup a subscriber (only needed for unmanaged subscribers).</description>
        <categories>
            <category name="topic" />
        </categories>
        <params>
            <param name="handle" type="string">
                <description>subscriber handle</description>
            </param>
        </params>
        <return>
        </return>
    </command>
    <command name="destroySubscriber">
        <description>Destroy a subscriber.</description>
        <categories>
            <category name="topic" />
        </categories>
        <params>
            <param name="handle" type="string">
                <description>subscriber handle</description>
            </param>
        </params>
        <return>
        </return>
    </command>
    <command name="createServiceClient">
        <description>Create a new service client.</description>
        <categories>
            <category name="service" />
        </categories>
        <params>
            <param name="nodeHandle" type="string">
                <description>node handle</description>
            </param>
            <param name="service" type="string">
                <description>service name</description>
            </param>
            <param name="managed" type="bool" default="true">
                <description>managed flag</description>
            </param>
            <param name="notify_graph" type="bool" default="true">
                <description>notify_graph flag</description>
            </param>
        </params>
        <return>
            <param name="handle" type="string" default="">
                <description>a handle to the new service client</description>
            </param>
        </return>
    </command>
    <command name="initServiceClient">
        <description>Initialize a service client (only needed for unmanaged service clients).</description>
        <categories>
            <category name="service" />
        </categories>
        <params>
            <param name="handle" type="string">
                <description>service client handle</description>
            </param>
        </params>
        <return>
        </return>
    </command>
    <command name="call">
        <description>Call a service.</description>
        <categories>
            <category name="service" />
        </categories>
        <params>
            <param name="handle" type="string">
                <description>service client handle</description>
            </param>
            <param name="payload" type="string">
                <description>request payload</description>
            </param>
        </params>
        <return>
            <param name="payload" type="string">
                <description>response payload</description>
            </param>
        </return>
    </command>
    <command name="cleanupServiceClient">
        <description>Cleanup a service client (only needed for unmanaged service clients).</description>
        <categories>
            <category name="service" />
        </categories>
        <params>
            <param name="handle" type="string">
                <description>service client handle</description>
            </param>
        </params>
        <return>
        </return>
    </command>
    <command name="destroyServiceClient">
        <description>Destroy a service client.</description>
        <categories>
            <category name="service" />
        </categories>
        <params>
            <param name="handle" type="string">
                <description>service client handle</description>
            </param>
        </params>
        <return>
        </return>
    </command>
    <command name="createServiceServer">
        <description>Create a new service server.</description>
        <categories>
            <category name="service" />
        </categories>
        <params>
            <param name="nodeHandle" type="string">
                <description>node handle</description>
            </param>
            <param name="service" type="string">
                <description>service name</description>
            </param>
            <param name="callback" type="string" default="">
                <description>lua calback to call when a request is received</description>
            </param>
            <param name="managed" type="bool" default="true">
                <description>managed flag</description>
            </param>
            <param name="notify_graph" type="bool" default="true">
                <description>notify_graph flag</description>
            </param>
        </params>
        <return>
            <param name="handle" type="string" default="">
                <description>a handle to the new service server</description>
            </param>
        </return>
    </command>
    <command name="initServiceServer">
        <description>Initialize a service server (only needed for unmanaged service servers).</description>
        <categories>
            <category name="service" />
        </categories>
        <params>
            <param name="handle" type="string">
                <description>service server handle</description>
            </param>
        </params>
        <return>
        </return>
    </command>
    <command name="cleanupServiceServer">
        <description>Cleanup a service server (only needed for unmanaged service servers).</description>
        <categories>
            <category name="service" />
        </categories>
        <params>
            <param name="handle" type="string">
                <description>service server handle</description>
            </param>
        </params>
